@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <LogOut @ref="logOutRef" />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private LogOut logOutRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        logOutRef.UpdateState();
    }


}